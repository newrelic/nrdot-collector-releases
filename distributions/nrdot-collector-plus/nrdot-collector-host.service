[Unit]
Description=NRDOT Collector Plus
After=network.target

[Service]
EnvironmentFile=/etc/nrdot-collector-plus/nrdot-collector-plus.conf
ExecStart=/usr/bin/nrdot-collector-plus $OTELCOL_OPTIONS
KillMode=mixed
Restart=on-failure
Type=simple
User=nrdot-collector-plus
Group=nrdot-collector-plus

[Install]
WantedBy=multi-user.target
